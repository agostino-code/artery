<?xml version="1.0" encoding="UTF-8"?>
<!-- services_crashed.xml - Vehicle services for CRASHED scenario -->
<services>
    <!-- Crashed vehicle sends immediate DENM (activated by storyboard signal) -->
    <service type="src.CrashedVehicleService">
        <listener port="2001" />
    </service>
    
    <!-- All vehicles receive DENM messages -->
    <service type="src.VehicleReceiverService">
        <listener port="2002" />
    </service>
</services>
